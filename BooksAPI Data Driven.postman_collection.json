					"script": {
						"exec": [
							"// Fixed ReferenceError by using pm.response.json() instead of response\r",
							"pm.test(\"Status code is 201\", ()=>{\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
